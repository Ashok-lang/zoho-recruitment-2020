import java.util.Iterator;

public class snakeMatrix {

	public static void main(String[] args) {
		
		int input=4;
		int count=1;
		
		int row=input;
		int col=(input-1)+input;
		
		int pos=input-1;
		int ind=0;
		
		while(pos>=0) {
			while(ind<pos) {
				System.out.print(" ");
				ind++;
			}
			
				for(int m=0; m<input; m++) {
					System.out.print(count);
					count++;
				}
			
			ind=0;
			System.out.println();
			pos--;
		}

	}

}
